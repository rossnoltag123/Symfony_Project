<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}<link rel="stylesheet" href="{{ asset('/css/styles.css') }}">{% endblock %}
    {#(asset)on static files, symfony prefixes every static URL with your CDN host, faster loading times#}
    {#param-converted#}
    </head>
    <body>

    {% set user = app.session.get('user') %}

    {% if user is null %}

    <p>Login: <a href="{{ path('login') }}">login</a></p>

    {% else %}

    <header>
        You are logged in: {{ user.username }}
        <br>
        <a href="{{ path('logout') }}">logout</a>
    </header>

    {% endif %}


        <div class="flex-container">
         <header>
            <h1>Bibliography Reference System</h1>
         </header>
            <ul>
                <li><a href="{{ path('homepage') }}">Home page</a></li>
                <li><a href="{{ path('login') }}">Login</a></li>
                <li><a href="{{ path('showBibliography') }}">Repository</a></li>
            </ul>

        {#--------------------------------------------#}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}

        {#--------------------------------------------#}

        </div>
    </body>
</html>
